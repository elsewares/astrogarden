<svg
	id="elsewares-logo"
	width="84"
	height="84"
	viewBox="0 0 84 84"
	fill="none"
	style="position: relative; top: 4px;"
	xmlns="http://www.w3.org/2000/svg"
	transition:persist
>
	<defs>
		<style>
			.logo-style {
				fill: none;
				stroke: #fff;
				stroke-miterlimit: 10;
				stroke-width: 7px;
			}
		</style>
	</defs>
	<g id="logo">
		<circle class="logo-style circle" cx="42" cy="42" r="36.4"/>
		<path class="logo-style schwa" d="M24,22.4c-5.2,4.9-8.5,11.8-8.5,19.6,0,14.8,11.9,26.7,26.7,26.7s26.7-11.9,26.7-26.7-11.9-26.7-26.7-26.7v53.4"/>
	</g>
</svg>

<script>
	import { animate, stagger } from "motion";

	function handleLogoAnimation() {
		animate(
			".schwa",
			{
				rotate: [90, -90, 0],
				transformOrigin: "center",
			},
			{
				duration: 2,
				ease: "circInOut",
				delay: stagger(0.1),
			},
		);

		animate(
			".schwa",
			{
				scale: [1, 0.9, 1],
				fill: ["#680040", "#820050", "#680040"],
				transformOrigin: "center",
			},
			{
				duration: 2,
				ease: "easeIn",
			},
		);
	}

	// Initialize only once when the component is first mounted
	const logo = document.getElementById("elsewares-logo");
	if (logo) {
		logo.addEventListener("mouseenter", handleLogoAnimation);
	}
</script>
